<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvUpcoming"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/ivLogo"
                android:src="@drawable/logo"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvName"
                android:text="Sandeep test"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="15dp"
                android:textSize="17sp"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toEndOf="@id/ivLogo"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCalendar"
                android:text="Oct 01 - Oct 31 2020"
                android:drawablePadding="10dp"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/ic_calender_green_24"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/ivLogo"
                app:layout_constraintTop_toBottomOf="@id/tvName"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTimeStart"
                android:text="08 am"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_clock_24"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toEndOf="@id/ivLogo"
                app:layout_constraintTop_toBottomOf="@id/tvCalendar"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTimeEnd"
                android:text="08 am"
                android:layout_marginStart="40dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_clock_24"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toEndOf="@id/tvTimeStart"
                app:layout_constraintTop_toBottomOf="@id/tvCalendar"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLocation"
                android:text="Mota Varachha, Surat, Gujarat, India"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_location_24"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toEndOf="@id/ivLogo"
                app:layout_constraintTop_toBottomOf="@id/tvTimeStart"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvApproved"
                android:text="Approved"
                android:textColor="@color/colorWhite"
                android:paddingHorizontal="15dp"
                android:paddingVertical="8dp"
                android:textSize="17sp"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/btn_submit_green_bg"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCancel"
                android:text="Cancel"
                android:paddingHorizontal="15dp"
                android:paddingVertical="8dp"
                android:textAllCaps="false"
                android:textColor="@color/colorDarkGray"
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvApproved"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>