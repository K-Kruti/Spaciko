            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="23sp"
            android:background="@drawable/circle"
            app:layout_constraintTop_toTopOf="@id/tvSeven"
            app:layout_constraintBottom_toBottomOf="@id/tvSeven"
            app:layout_constraintStart_toEndOf="@id/tvLine9"
            app:layout_constraintEnd_toStartOf="@id/tvLine10"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLine10"
