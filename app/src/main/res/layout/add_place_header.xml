            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="23sp"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="17dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@id/tvLine1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLine1"
            android:layout_width="32dp"
            android:layout_height="3dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/tvOne"
            app:layout_constraintStart_toEndOf="@id/tvOne"
            app:layout_constraintEnd_toStartOf="@id/tvTwo"
            app:layout_constraintTop_toTopOf="@+id/tvOne" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTwo"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:text="2"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="23sp"
            android:background="@drawable/circle"
            app:layout_constraintTop_toTopOf="@id/tvOne"
            app:layout_constraintBottom_toBottomOf="@id/tvOne"
            app:layout_constraintStart_toEndOf="@id/tvLine1"
            app:layout_constraintEnd_toStartOf="@id/tvLine2"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLine2"
            android:layout_width="32dp"
            android:layout_height="3dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/tvTwo"
            app:layout_constraintStart_toEndOf="@id/tvTwo"
            app:layout_constraintEnd_toStartOf="@id/tvThree"
            app:layout_constraintTop_toTopOf="@+id/tvTwo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvThree"
            android:layout_width="38dp"
            android:layout_height="38dp"
